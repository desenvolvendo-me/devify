<div class="bg-white dark:bg-slate-800 dark:border-slate-600/50 border border-slate-300 px-6 pt-10 rounded-lg shadow-sm shadow-slate-300/20 dark:shadow-none">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100"><%= t('views.manager.students.survey_summary') %></h2>
    <span class="rounded px-2 py-1 text-xs font-medium <%= level_color_class(@survey_level) %>"><%= t('views.manager.students.level') %> <%= @survey_level %></span>
  </div>

  <div class="my-6">
    <h4 class="font-normal text-primary-500 text-lg dark:text-primary-400"><%= t('views.manager.students.technologies') %></h4>
    <ul>
      <% @student_profile.technologies.each do |tech| %>
        <li class="block text-lg font-normal text-white"><%= tech %></li>
      <% end %>
    </ul>
  </div>

  <div class="my-6">
    <h4 class="font-normal text-primary-500 text-lg dark:text-primary-400"><%= t('views.manager.students.most_studied_language') %></h4>
    <ul>
      <% @student_profile.most_studied_language.each do |language| %>
        <li class="block text-lg font-normal text-white"><%= language %></li>
      <% end %>
    </ul>
  </div>

  <div class="my-6">
    <h4 class="font-normal text-primary-500 text-lg dark:text-primary-400"><%= I18n.t('views.manager.students.study_duration') %></h4>
    <p class="block text-lg font-normal text-white"><%= @student_profile.translated_study_duration %></p>
  </div>

  <div class="my-6">
    <h4 class="font-normal text-primary-500 text-lg dark:text-primary-400"><%= t('views.manager.students.web_framework_studied') %></h4>
    <ul>
      <% @student_profile.web_framework_studied.each do |framework| %>
        <li class="block text-lg font-normal text-white"><%= framework %></li>
      <% end %>
    </ul>
  </div>

  <div class="my-6">
    <h4 class="font-normal text-primary-500 text-lg dark:text-primary-400"><%= I18n.t('views.manager.students.web_framework_study_duration') %></h4>
    <p class="block text-lg font-normal text-white"><%= @student_profile.translated_web_framework_study_duration %></p>
  </div>

  <div class="my-6">
    <h4 class="font-normal text-primary-500 text-lg dark:text-primary-400"><%= t('views.manager.students.communication_preference') %></h4>
    <p class="block text-lg font-normal text-white"><%= @student_profile.communication_preference %></p>
  </div>

  <div class="my-6">
    <h4 class="font-normal text-primary-500 text-lg dark:text-primary-400"><%= t('views.manager.students.exposure_preference') %></h4>
    <p class="block text-lg font-normal text-white"><%= @student_profile.exposure_preference %></p>
  </div>
</div>
