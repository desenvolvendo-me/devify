<div id="sticky-banner" tabindex="-1" class="flex justify-between w-full p-4 border-b border-gray-200 bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
  <div class="flex items-center mx-auto">
    <p class="flex items-center text-sm font-normal text-gray-500 dark:text-gray-400">
            <span class="inline-flex p-1 mr-3 bg-gray-200 rounded-full dark:bg-gray-600 w-6 h-6 items-center justify-center">
                <svg class="w-3 h-3 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 19">
                    <path d="M15 1.943v12.114a1 1 0 0 1-1.581.814L8 11V5l5.419-3.871A1 1 0 0 1 15 1.943ZM7 4H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2v5a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2V4ZM4 17v-5h1v5H4ZM16 5.183v5.634a2.984 2.984 0 0 0 0-5.634Z"/>
                </svg>
                <span class="sr-only"><%= t 'views.layouts.defaults.sr-only.open_menu' %></span>
            </span>
      <span><%= t 'views.layouts.defaults.you_are' %> <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300"><%= t 'views.layouts.defaults.internal' %></span>
 <%= t 'views.layouts.defaults.from_app' %></span>
    </p>
  </div>
  <div class="flex items-center">
    <button data-dismiss-target="#sticky-banner" type="button" class="flex-shrink-0 inline-flex justify-center w-7 h-7 items-center text-gray-400 hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 dark:hover:bg-gray-600 dark:hover:text-white">
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
      <span class="sr-only"><%= t 'views.layouts.defaults.light_bulb' %></span>
    </button>
  </div>
</div>
<div class="container  mx-auto max-w-screen-lg">
  <div class="mt-4 mb-4">
    <div class="flex justify-between mb-4">
      <h2 class="text-3xl mb-4"><%= t 'manager.home.index.title' %></h2>
    </div>
    <div class="flex mb-8">
      <div class="mr-4 text-center rounded-md bg-white p-6 dark:bg-slate-800 dark:text-white border border-slate-300/70 dark:border-slate-600/70 md:w-[300px]">
        <h3 class="text-xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight">Evolução mentoria</h3>
        <p class="prose prose-slate dark:prose-invert mt-2 mb-4"><%= "Level #{@level_survey}" %></p>
        <%= render "modal_profile" %>
      </div>
      <div class="text-center rounded-md bg-white p-6 dark:bg-slate-800 dark:text-white border border-slate-300/70 dark:border-slate-600/70 md:w-[300px]">
        <h3 class="text-xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight">Evolução do perfil</h3>
        <p class="prose prose-slate dark:prose-invert mt-2 mb-4"><%= "Level #{@level_profile}" %></p>
        <%= render "modal_survey" %>
      </div>
    </div>
    <%= form_tag(manager_dashboard_path, method: :get) do %>
      <div class="flex justify-between mb-4">
        <div class="mr-7">
          <label for="mark" class="form-label"><%= t 'manager.home.index.filter_1' %></label>
          <%= select_tag :mark, options_for_select(@marks, params[:mark]), class: "form-select", include_blank: true %>
        </div>
        <div class="mr-7">
          <label for="language" class="form-label"><%= t 'manager.home.index.filter_2' %></label>
          <%= select_tag :language, options_for_select(@languages.map { |l| [l.name, l.id] }, params[:language]), class: "form-select", include_blank: true %>
        </div>
        <div class="mr-7">
          <label for="area" class="form-label"><%= t 'manager.home.index.filter_3' %></label>
          <%= select_tag :area, options_for_select(@areas.map { |a| [a.name, a.id] }, params[:area]), class: "form-select", include_blank: true %>
        </div>
        <div class="flex items-end">
          <%= submit_tag t('manager.home.index.filter_by'), class:"btn btn-primary block" %>
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <%= line_chart @student_progress_data, xtitle: t('manager.home.index.xtitle'), ytitle: t('manager.home.index.ytitle') %>
  </div>
</div>
