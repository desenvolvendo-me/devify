<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-4 mb-3">Projetos Simulados Dispon√≠veis</h1>
    </div>
  </div>

  <div class="row">
    <% @project_simulations.each do |project| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h2 class="card-title"><%= link_to project.title, project_simulation_path(project) %></h2>
            <p class="card-text"><%= project.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'Ver Detalhes', project_simulation_path(project), class: 'btn btn-info' %>
                <%= form_with url: project_simulations_path, method: :post, local: true do |form| %>
                  <%= form.hidden_field :project_id, value: project.id %>
                  <%= form.submit 'Iniciar Projeto', class: 'btn btn-primary' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
